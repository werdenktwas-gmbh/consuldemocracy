<% provide :title do %>
  <%= t("admin.header.title") %> - <%= t("admin.menu.projects") %> - <%= @project.title %>
<% end %>
<%= back_link_to admin_project_path(@project) %>
<div id="cards">
  <h2 class="inline-block">
    <%= @project.title %> <%= t("admin.projects.cards.cards_title") %></h2>

  <div class="float-right">
    <%= link_to t("admin.projects.cards.create_card"),
                new_admin_project_widget_card_path(@project), class: "button" %>
  </div>

  <%= render Admin::Widget::Cards::TableComponent.new(
    @cards,
    no_cards_message: t("admin.projects.cards.no_cards")
  ) %>
</div>
