<%= render "shared/globalize_locales", resource: @project_phase %>

<%= translatable_form_for [:admin, @project, @project_phase] do |f| %>
  <%= render "shared/errors", resource: @project_phase %>

  <div class="row">
    <%= f.translatable_fields do |translations_form| %>
      <div class="small-12 medium-12 column">
        <%= translations_form.text_field :title %>
      </div>
      <div class="small-12 medium-6 column">
        <%= translations_form.text_field :title_short %>
      </div>
      <div class="small-12 medium-6 column">
        <%= translations_form.text_field :subtitle %>
      </div>

      <div class="small-12 column">
        <%= translations_form.text_area :content, class: "html-area admin" %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="small-12 medium-3 column">
      <%= f.text_field :starts_at,
                       autocomplete: "off",
                       value: @project_phase.starts_at.present? ? l(@project_phase.starts_at.to_date) : nil,
                       class: "js-calendar-full" %>
    </div>

    <div class="small-12 medium-3 column end">
      <%= f.text_field :ends_at,
                       autocomplete: "off",
                       value: @project_phase.ends_at.present? ? l(@project_phase.ends_at.to_date) : nil,
                       class: "js-calendar-full" %>
    </div>
  </div>
    
  <div class="row">
    <div class="small-12 column">
      <%= render Images::NestedComponent.new(f) %>
    </div>
    <div class="clear">
      <div class="small-12 medium-6 column">
        <%= f.number_field :order, min: 1, hint: t("admin.projects.phases.form.order_help") %>
      </div>
      <div class="small-12 medium-12 column">
        <%= f.check_box :enabled, checked: @project_phase.enabled? %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="clear">
      <div class="small-12 medium-4 large-2 column">
        <%= f.submit t("admin.projects.phases.form.#{@action}_button"),
                     class: "button success expanded margin-top" %>
      </div>
    </div>
  </div>

<% end %>
